{
  "expo": {
    "name": "SpentSmart",
    "slug": "spentsmart",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "spentsmart",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ujjwaljain.spentsmart",
      "infoPlist": {
        "NSCameraUsageDescription": "ExpenseTracker needs camera access to scan UPI QR codes for payment tracking.",
        "NSFaceIDUsageDescription": "ExpenseTracker needs FaceID to secure your financial data.",
        "NSContactsUsageDescription": "ExpenseTracker uses your contacts to help you easily select payees for manual transactions."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0A0A0A",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.READ_CONTACTS"
      ],
      "package": "com.ujjwaljain.spentsmart",
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "upi"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A0A0A",
          "dark": {
            "backgroundColor": "#0A0A0A"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "ExpenseTracker needs camera access to scan UPI QR codes for payment tracking."
        }
      ],
      "./modules/upi-intent/app.plugin.js"
    ],
    "reactCompiler": true,
    "updates": {
      "url": "https://u.expo.dev/14d0fdab-c65f-4488-9356-a157d43b5c37",
      "fallbackToCacheTimeout": 0
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "14d0fdab-c65f-4488-9356-a157d43b5c37"
      }
    },
    "owner": "ujjwaljain1609s-organization",
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}