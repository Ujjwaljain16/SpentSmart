{
  "expo": {
    "name": "SpentSmart",
    "slug": "spentsmart",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "spentsmart",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ujjwaljain.spentsmart",
      "infoPlist": {
        "NSCameraUsageDescription": "ExpenseTracker needs camera access to scan UPI QR codes for payment tracking.",
        "NSFaceIDUsageDescription": "ExpenseTracker needs FaceID to secure your financial data.",
        "NSContactsUsageDescription": "ExpenseTracker uses your contacts to help you easily select payees for manual transactions."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0A0A0A",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.READ_CONTACTS",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.ujjwaljain.spentsmart"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A0A0A",
          "dark": {
            "backgroundColor": "#0A0A0A"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "ExpenseTracker needs camera access to scan UPI QR codes for payment tracking."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "921b03ee-d272-469d-81d5-161813173ce9"
      }
    },
    "owner": "ujjwaljain16"
  }
}
